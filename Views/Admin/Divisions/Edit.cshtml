@model DivisionInfo

@{
    ViewData["Title"] = "Admin - Edit Division";
}

<h1>Edit Division</h1>

<h4>Organization: @SetCurrentOrganizationActionFilter.CurrentOrganization</h4>
<hr />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
    <div class="form-group row mb-3">
        <label asp-for="ID" class="col-3 col-form-label"></label>
        <label asp-for="ID" class="col-3 col-form-label">@Model.ID</label>
        <span asp-validation-for="ID" class="text-danger col-6"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="League" class="col-3 col-form-label"></label>
        <input asp-for="League" class="col-3" aria-required="true" />
        <span asp-validation-for="League" class="text-danger col-6"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="NameOrNumber" class="col-3 col-form-label">Name or #</label>
        <input asp-for="NameOrNumber" class="col-3" aria-required="true" />
        <span asp-validation-for="NameOrNumber" class="text-danger col-6"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="Locked" class="col-3 form-check-label"></label>
        <input asp-for="Locked" class="form-check-input" />
    </div>
    <div class="form-group mb-3">
        <input type="submit" value="Save" class="btn btn-primary" @((SetCurrentOrganizationActionFilter.DisableSubmitButton) ? "disabled" : "") />
    </div>
</form>

<div>
    <a asp-action="Index" asp-route-organization="@SetCurrentOrganizationActionFilter.CurrentOrganization">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
