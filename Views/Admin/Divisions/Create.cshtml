@model DivisionInfo

<vc:Header sub-heading="Admin: Create Division" />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row mb-3">
        <label asp-for="ID" class="col-3 col-form-label"></label>
        <input asp-for="ID" class="col-3" aria-required="true" />
        <span asp-validation-for="ID" class="text-danger col-6"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="League" class="col-3 col-form-label"></label>
        <input asp-for="League" class="col-3" aria-required="true" />
        <span asp-validation-for="League" class="text-danger col-6"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="NameOrNumber" class="col-3 col-form-label">Name or #</label>
        <input asp-for="NameOrNumber" class="col-3" aria-required="true" />
        <span asp-validation-for="NameOrNumber" class="text-danger col-6"></span>
    </div>
    <div class="form-group mb-3">
        <input type="submit" value="Create" class="btn btn-primary" @((SetCurrentOrganizationActionFilter.DisableSubmitButton) ? "disabled" : "") />
    </div>
</form>

<div>
    <a asp-action="Index" title="List of Divisions"
        asp-route-organization="@SetCurrentOrganizationActionFilter.CurrentOrganization">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
