@model DivisionListViewModel

@{
    ViewData["Title"] = "Admin - Divisions";
}

<h1>Divisions</h1>
<h4>Organization: @SetCurrentOrganizationActionFilter.CurrentOrganization</h4>
<hr />

<p>
    <a asp-action="Create" asp-route-organization="@SetCurrentOrganizationActionFilter.CurrentOrganization">Create New Division</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DivisionsList[0].ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DivisionsList[0].League)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DivisionsList[0].NameOrNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DivisionsList[0].Updated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DivisionsList[0].Locked)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DivisionsList)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.League)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOrNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Locked)
                </td>
                <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" asp-route-organization="@SetCurrentOrganizationActionFilter.CurrentOrganization">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID" asp-route-organization="@SetCurrentOrganizationActionFilter.CurrentOrganization">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID" asp-route-organization="@SetCurrentOrganizationActionFilter.CurrentOrganization">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index" asp-controller="Admin" asp-route-organization="@SetCurrentOrganizationActionFilter.CurrentOrganization">Back to Admin</a>
</div>
