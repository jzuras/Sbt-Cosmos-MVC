@model DivisionListViewModel

<vc:Header sub-heading="Divisions" />

<table class="table-responsive">
    <tbody>
        @foreach (var item in Model.DivisionsList)
        {
            <tr>
                <td>
                    <a asp-action="Index" asp-controller="Standings" title="View Standings"
                        asp-route-organization="@SetCurrentOrganizationActionFilter.CurrentOrganization" 
                        asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.League) @Html.DisplayFor(modelItem => item.NameOrNumber)</a>
                </td>
            </tr>
        }
    </tbody>
</table>